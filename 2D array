// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
    int n=3;
    int arr[n][n];
    cout<<"Enter n: ";
    cout<<endl;
    for(int i=0; i<n; i++){
        for(int j=0; j<n; j++){
            cin>>arr[i][j];
        }
    }
    
    //p diagonall matrix;
    cout<<"Diagonal matrix: ";
    for(int i=0; i<n; i++){
        cout<<arr[i][i]<<" ";
    }
    //s diagonal matrix:
    cout<<endl;
    cout<<"Diagonal of reverse matrix: ";
    for(int j=0; j<n; j++){
        cout<<arr[n-j-1][n-j-1]<<" ";
    }
    
    cout<<endl;
    cout<<"S Diagonal of  matrix: ";
    for(int j=0; j<n; j++){
        cout<<arr[j][n-j-1]<<" ";
    }
    cout<<endl;
    cout<<"Transpose matrix: "<<endl;
    int dummy[n][n];
    for(int i=0; i<n; i++){
        for(int j=0; j<n; j++){
            dummy[i][j]=arr[j][i];
        }
    }
    for(int i=0; i<n; i++){
        for(int j=0; j<n; j++){ 
            cout<<dummy[i][j]<<" ";
        }cout<<endl;
    }
    for(int i=0; i<n; i++){
        int max=arr[i][0];
        for(int j=1; j<n; j++){ 
            if(arr[i][j]>max){
                max=arr[i][j];
            }
        }
    cout<<"index of row: "<<i+1<<" max element: "<<max<<endl;
    }
    // cout<<max
    
}
